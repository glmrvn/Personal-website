<div class="wrap">
<%= will_paginate @article, page_links: false %>
  <% @articles.all.order('see_count DESC').each do |article| %>

    <div class="article">
      <div class="article_bg"></div>
      <div class="art_img_container">
        <%= link_to image_tag(article.image.url(:thumb), class: "art_img"), article_path(article) %>
      </div>

      <div class="a_to_article">
        <%= link_to article.title, article_path(article), class: "art_title" %>
      </div>  
    </div>

  <% end %>


</div>