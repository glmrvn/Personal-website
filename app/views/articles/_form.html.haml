%br/
.form-group
  = form_for @article do |f|
    = render 'shared/error_messages'
    = f.label :title
    = f.text_field :title, class: "form-control", placeholder: "Title"
    %br/
    = f.label :text
    = f.text_area :text, class: "form-control", placeholder: "Description"
    %br/
    = f.label :resource_url
    = f.text_field :resource_url, class: "form-control", placeholder: "Description"
    %br/
    = f.label :image_url
    %br/
    = f.text_area :image_url, class: "form-control"
    %br/
    = f.radio_button :tag, "WEB", :checked => true
    = label :tag, "WEB"
    &nbsp;
    = f.radio_button :tag, "APP"
    = label :tag, "APP"
    &nbsp;
    = f.radio_button :tag, "HIDDEN"
    = label :tag, "HIDDEN"
    %br/
    %br/
    = f.submit class: "btn btn-large btn-primary"
