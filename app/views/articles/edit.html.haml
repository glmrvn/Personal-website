.wrap_480
  %h1 Edit article
  %br/
  = image_tag @article.image.url(:thumb)
  .form-group
    = form_for @article do |f|
      = render 'shared/error_messages'
      %p
        = f.label :title
        %br/
        = f.text_field :title, class: "form-control"
      %p
        = f.label :text
        %br/
        = f.text_area :text, class: "form-control"
      %p
        = f.label :image_url
        %br/
        = f.text_area :image_url, class: "form-control"
      %p
        %br/
        = f.radio_button :tag, "WEB", :checked => true
        = label :tag, "WEB"
        = f.radio_button :tag, "APP"
        = label :tag, "APP"
        = f.radio_button :tag, "HIDDEN"
        = label :tag, "HIDDEN"
        %br/
        %br/
        = f.submit "Save", class: "btn btn-large btn-primary"
        %br/
        %br/
        %br/
