<div class="wrap">
  <div class="pagination1">
    <%= will_paginate @article, :previous_label => '&laquo Назад', :next_label => 'Вперед &raquo' %>
  </div>

<% @articles.all.order('created_at DESC').each do |article| %>

  <div class="article">

    <div class="art_img_container">
      <%= link_to image_tag(article.image.url(:thumb), class: "art_img"), article_path(article) %>
    </div>

    <div class="a_to_article">

      <%= link_to article.title, article_path(article), class: "art_title" %>

    </div>

  </div>

<% end %>


