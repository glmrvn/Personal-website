.wrap_480
  %h1 Add new article
  %br/
  .form-group
    = form_for :article, url: articles_path do |f|
      = render 'shared/error_messages'
      = f.label :title
      = f.text_field :title, class: "form-control", placeholder: "Title"
      %br/
      = f.label :text
      = f.text_area :text,  class: "form-control", placeholder: "Description"
      %br/
      = f.label :image_url
      %br/
      = f.text_area :image_url, class: "form-control"
      %br/
      = f.file_field :image
      %br/
      -# = f.radio_button :tag, "WEB", :checked => true
      -# = label :tag, "WEB"
      -# = f.radio_button :tag, "APP"
      -# = label :tag, "APP"
      -# = f.radio_button :tag, "HIDDEN"
      -# = label :tag, "HIDDEN"
      %br/
      %br/
      = f.submit class: "btn btn-large btn-primary"
