<!DOCTYPE html>
<html>
<head>
  <title>ARNIS DESIGN</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page-preloader"><span class="spinner"></span></div>
  <header>
    <div class="menu">
      <nav>
    	<%=link_to (image_tag("logo.png", id: "user_pic")), root_path %>

        <% if signed_in? %>
          <%= link_to "Выйти", signout_path, method: "delete" %>
          <%= link_to "Админ", user_path(current_user) %>
          <div id="line"></div>
        <% end %>

        <div id="menu_btn"><%= link_to "СВЯЗАТЬСЯ", root_path( :anchor => 'message_screen' ) %></div>
        <%= link_to "ПРОЦЕСС", root_path( :anchor => 'six_screen' ) %>
        <%= link_to "ПОРТФОЛИО", root_path( :anchor => 'fifth_screen' ) %>
        <%= link_to "РЕШЕНИЯ", root_path( :anchor => 'fourth_screen' ) %>
        <%= link_to "КТО Я ТАКОЙ?", root_path( :anchor => 'threeth_screen' ) %>
        <%= link_to "DESIGN", root_path( :anchor => 'second_screen' ) %>
      </nav>
    </div>
  </header>

  <div class="wrap">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>

  <%= yield %>

  <footer>
    <div class="footer_icons">
    <%= link_to image_tag("ico_twitter.png", class:"foo_ico"), "https://twitter.com/GloomRaven" %>
    <%= link_to image_tag("ico_vk.png", class:"foo_ico"), root_path %>
    <%= link_to image_tag("ico_skype.png", class:"foo_ico"), root_path %>
    <%= link_to image_tag("ico_github.png", class:"foo_ico"), 'https://github.com/glmrvn' %>
    <%= link_to image_tag("ico_mail.png", class:"foo_ico"), "mailto:faqmybrain@gmail.com?subject=Хочу+сайт&body=Здравствуйте,+нужен+сайт%2C+быстро,+не+дорого" %>

    </div>
  </footer>

</body>
</html>
