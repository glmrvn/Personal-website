<div class="wrap">
  <h1>Сообщения</h1>
  <table>
    <tr>
	  	<th>Имя или телефон</th>
	  	<th>Сообщение</th>
	  	<th>Время</th>
	  	<th></th>
	</tr>

  <% @messages.all.each do |message| %>
	<tr>
		<td><%= message.name %></td>
		<td><%= message.text %></td>
		<td><%= message.created_at.strftime("%d.%m.%y") %></td>
		<td><%= link_to "Delete", message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
	</table>
</div>