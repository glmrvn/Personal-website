#section1
  .container
    = image_tag("alex.png", class:"userpic")
    %h1 Alex Arnis
    %p UI/UX DESIGNER
    = link_to "CASES", "#section2", class: 'scroll'

#section2
  - cache ['store', Article.latest] do
    - @articles.all.order('created_at ASC').each do |article|
      - cache ['entry', article] do
        .article
        - if signed_in?
          = link_to image_tag(article.image.url(:medium), class: "art_img"), article.image.url(:original)
        - else
          = image_tag(article.image.url(:medium), class: "art_img")
